{% extends "base.html.twig" %}

{% block body %}
<div>
    <h1>Login!</h1>

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    
    {{ form_start(form) }}
        {{ form_row(form._username) }}
        {{ form_row(form._password) }}
        <button type="submit">Login</button>
        <a href="{{ path('user_register') }}">Register</a>
    {{ form_end(form) }}
</div>
{% endblock %}